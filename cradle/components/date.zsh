# └─────────────┘

function ztc:component:date:order {
    ztc[date:y]=:auto
    ztc[date:x]=:auto
    ztc[date:h]=:auto
    ztc[date:w]=:auto
}


# ┌─────────────┐
# │    alter    │
# └─────────────┘

function ztc:component:date:alter {
    local _ztcad_date=''
    strftime -s _ztcad_date ${ztc[:date:format]//\%n/@n} # capture newlines

    ztc:gizmo:stash date:data _ztcad_date
}
